<div>
  <div class="flex justify-between text-white bg-[#3167A8] py-6 px-3 w-full m-0 mb-3">
    <span class="material-symbols-outlined">
     <%= link_to "arrow_back", root_path %>
    </span>
    <h2>LOGIN</h2>
    <h3><%= link_to "Login", new_user_session_path%></h3>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'border-none' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'border-none' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'border-none' %>
    </div>
  <% end %>

  <div class="actions m-3 text-center bg-[#3167A8]  hover:bg-blue-600 text-white mb-4 py-2 px-4 rounded-lg">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>

